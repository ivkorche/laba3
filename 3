#include <stdio.h>
#include <conio.h>
#define YES 1
#define NO 0
int main (void)
{
	int c;
	int flag;
	int cnt;
	int cnd;
	cnt = 0;
	cnd = 0;
	flag = NO;
	while ( (c = getchar()) != EOF  )
	{
		if( c>='A' && c <='Z' || c>='a' && c<='z')
		{
			flag = YES;
			cnt++;
		}
		else
		{
			if (flag == YES)
			{
				if( (cnt % 2) != 0)
				{
					cnd++;
				}
			}
			cnt=0;
			flag = NO;
		}
	}
	printf("number of words with an odd number of letters: %d",cnd);
	getch();
		return 0;
}
